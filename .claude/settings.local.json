{
  "permissions": {
    "allow": [
      "mcp__gemini__ask-gemini",
      "Bash(git init:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(claude -p:*)",
      "Bash(ls:*)",
      "Bash(git rm:*)",
      "Bash(npm test:*)",
      "Bash(swift build:*)",
      "Bash(swift test:*)",
      "Bash(aerospace list-windows:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Bash:*test*",
        "hooks": [
          {
            "type": "command",
            "command": "echo '[HOOK] Test executed at:'$(date '+%Y-%m-%d %H:%M:%S')"
          }
        ]
      }
    ]
  }
}
